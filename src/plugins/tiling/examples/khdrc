# reload config
cmd + alt + ctrl - r : khd -e "reload"

# focus window
alt - h : chunkc window -f west
alt - j : chunkc window -f south
alt - k : chunkc window -f north
alt - l : chunkc window -f east

# equalize size of windows
shift + alt - 0 : chunkc desktop -e root

# swap window
shift + alt - h : chunkc window -s west
shift + alt - j : chunkc window -s south
shift + alt - k : chunkc window -s north
shift + alt - l : chunkc window -s east

# move window
shift + cmd - h : chunkc window -w west
shift + cmd - j : chunkc window -w south
shift + cmd - k : chunkc window -w north
shift + cmd - l : chunkc window -w east

# move floating windows / windows on a floating space
shift + alt - up     : chunkc window -W fullscreen
shift + alt - left   : chunkc window -W left
shift + alt - right  : chunkc window -W right
shift + cmd - left   : chunkc window -W top-left
shift + cmd - right  : chunkc window -W top-right
shift + ctrl - left  : chunkc window -W bottom-left
shift + ctrl - right : chunkc window -W bottom-right

# send window to desktop
shift + alt - z : chunkc window -d prev
shift + alt - c : chunkc window -d next
shift + alt - 1 : chunkc window -d 1
shift + alt - 2 : chunkc window -d 2
shift + alt - 3 : chunkc window -d 3
shift + alt - 4 : chunkc window -d 4
shift + alt - 5 : chunkc window -d 5
shift + alt - 6 : chunkc window -d 6

# send window to desktop and switch desktop
shift + cmd - z : chunkc window -d prev; khd -p "cmd + alt - z"
shift + cmd - c : chunkc window -d next; khd -p "cmd + alt - c"
shift + cmd - 1 : chunkc window -d 1; khd -p "cmd + alt - 1"
shift + cmd - 2 : chunkc window -d 2; khd -p "cmd + alt - 2"
shift + cmd - 3 : chunkc window -d 3; khd -p "cmd + alt - 3"
shift + cmd - 4 : chunkc window -d 4; khd -p "cmd + alt - 4"
shift + cmd - 5 : chunkc window -d 5; khd -p "cmd + alt - 5"
shift + cmd - 6 : chunkc window -d 6; khd -p "cmd + alt - 6"

# focus monitor
ctrl + alt - z  : chunkc monitor -f prev
ctrl + alt - c  : chunkc monitor -f next
ctrl + alt - 1  : chunkc monitor -f 1
ctrl + alt - 2  : chunkc monitor -f 2
ctrl + alt - 3  : chunkc monitor -f 3

# send window to monitor and follow focus
ctrl + cmd - z  : chunkc window -m prev; chunkc monitor -f prev
ctrl + cmd - c  : chunkc window -m next; chunkc monitor -f next
ctrl + cmd - 1  : chunkc window -m 1; chunkc monitor -f 1
ctrl + cmd - 2  : chunkc window -m 2; chunkc monitor -f 2
ctrl + cmd - 3  : chunkc window -m 3; chunkc monitor -f 3

# increase region size
shift + alt - a : chunkc window -r 0.1 -e west
shift + alt - s : chunkc window -r 0.1 -e south
shift + alt - w : chunkc window -r 0.1 -e north
shift + alt - d : chunkc window -r 0.1 -e east

# decrease region size
shift + cmd - a : chunkc window -r -0.1 -e west
shift + cmd - s : chunkc window -r -0.1 -e south
shift + cmd - w : chunkc window -r -0.1 -e north
shift + cmd - d : chunkc window -r -0.1 -e east

# set insertion point
ctrl + alt - f : chunkc window -i focus
ctrl + alt - h : chunkc window -i west
ctrl + alt - j : chunkc window -i south
ctrl + alt - k : chunkc window -i north
ctrl + alt - l : chunkc window -i east

# rotate tree
alt - r : chunkc desktop -r 90

# mirror tree y-axis
alt - y : chunkc desktop -m vertical

# mirror tree x-axis
alt - x : chunkc desktop -m horizontal

# toggle desktop offset
alt - a : chunkc desktop -t offset

# toggle window fullscreen
alt - f : chunkc window -t fullscreen

# toggle window parent zoom
alt - d : chunkc window -t parent

# toggle window split type
alt - e : chunkc window -t split

# float / unfloat window
alt - t : chunkc window -t float

# float next window to be tiled
shift + alt - t : chunkc config window_float_next 1

# change layout of desktop
ctrl + alt - a : chunkc desktop -l bsp
ctrl + alt - s : chunkc desktop -l monocle
ctrl + alt - d : chunkc desktop -l float

# remap caps-lock to escape for this config only !!!
# macos sierra can also perform this remap for a given keyboard
- capslock : khd -p "- escape"

# key remap for norwegian layout \ { }
cmd - 7 : khd -p "shift + alt - 7"
cmd - 8 : khd -p "shift + alt - 8"
cmd - 9 : khd -p "shift + alt - 9"
